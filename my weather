            border-radius: 5px;  
        }  

        button {  
            padding: 10px;  
            background-color: #007bff;  
            color: white;  
            border: none;  
            border-radius: 5px;  
            cursor: pointer;  
            margin-left: 10px;  
        }  

        button:hover {  
            background-color: #0056b3;  
        }  

        .weather-info {  
            text-align: center;  
            display: none;  
            border: 1px solid #ccc;  
            border-radius: 5px;  
            padding: 15px;  
            background-color: white;  
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);  
        }  

